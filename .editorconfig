root = true

[**]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[**.html]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 4

[**.{js,ts}]
indent_style = space
indent_size = 2

[**.json]
indent_style = space
indent_size = 2

# игнорировать директории со сборками проекта
[{build,dist}/**]
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

# игнорировать минифицированные файлы и библиотеки
[{**.min.**,libs/**}]
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
